<UserControl x:Class="Pontor.PredictControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pontor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" >
            <CheckBox Content="Use with Arduino" VerticalContentAlignment="Center" Margin="0,0,30,0"/>
            <Label Content="Select Bluetooth device:" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Name="BluetoothDevicesList" Width="100" SelectionChanged="BluetoothDevicesList_SelectionChanged" IsEnabled="False" VerticalContentAlignment="Center" />
        </StackPanel>
        <Grid Name="State" Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="State:" FontSize="24" VerticalContentAlignment="Center"/>
                <Ellipse Name="LED" Grid.Column="0" Fill="Red" Height="40" Width="40" Margin="10,0"/>
                <Label Name="StateLabel" Content="No Person in Range" FontSize="24" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="Pontor.PredictControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pontor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <CheckBox Content="Use with Arduino" Grid.Row="0"/>
        <ComboBox Name="BluetoothDevicesList" Width="100" SelectionChanged="BluetoothDevicesList_SelectionChanged" IsEnabled="False" Grid.Row="0"/>
    </Grid>
</UserControl>
